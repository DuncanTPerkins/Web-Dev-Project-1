@model MotorCarFleet.Models.ServiceRecord

@{
    ViewBag.Title = "Delete Record?";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this Service Record?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Date Serviced:
        </dt>

        <dd>
            @Model.DateServiced
        </dd>

        <dt>
            Issues Found:
        </dt>

        <dd>
            @Model.IssuesFound
        </dd>

        <dt>
            Next Service:
        </dt>

        <dd>
            @Model.NextService
        </dd>
        <dt>
            Cost of Service:
        </dt>

        <dd>
            @Model.CostOfService
        </dd>
    </dl>

    <form method="post" action="/record/deleterecord">
        <div class="form-actions no-color">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a href="/home/index" class="btn btn-default">Back to List</a>
        </div>
    </form>
</div>
