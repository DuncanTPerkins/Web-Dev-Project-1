@model MotorCarFleet.Models.Car

@{
    ViewBag.Title = "Edit Car";
}

<h2>@ViewBag.Title</h2>

<form method="post" action="/home/edit">
    <div class="form-horizontal">

        <div class="form-group">
            <label for="VIN" class="control-label col-md-2">VIN:</label>
            <div class="col-md-10">
                <input type="text" id="VIN" name="VIN" value="@Model.VIN"class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="License" class="control-label col-md-2">License:</label>
            <div class="col-md-10">
                <input type="text" id="License" name="License" value="@Model.License"class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="Make" class="control-label col-md-2">Make:</label>
            <div class="col-md-10">
                <input type="text" id="Make" name="Make" value="@Model.Make" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="Model" class="control-label col-md-2">Model:</label>
            <div class="col-md-10">
                <input type="text" id="Model" name="Model" value="@Model.Model" class="form-control" />
            </div>
        </div>

        @Html.HiddenFor(model => model.Id)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a href="/home/index">Back to List</a>
</div>
